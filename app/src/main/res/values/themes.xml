<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FusionsPreview.Base" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">@bool/fusionsPreview_windowLightStatusBar</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Theme Colors -->
        <item name="colorPrimary">@color/fusionsPreview_primary</item>
        <item name="colorOnPrimary">@color/fusionsPreview_onPrimary</item>
        <item name="colorPrimaryContainer">@color/fusionsPreview_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/fusionsPreview_onPrimaryContainer</item>
        <item name="colorSecondary">@color/fusionsPreview_secondary</item>
        <item name="colorOnSecondary">@color/fusionsPreview_onSecondary</item>
        <item name="colorSecondaryContainer">@color/fusionsPreview_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/fusionsPreview_onSecondaryContainer</item>
        <item name="colorTertiary">@color/fusionsPreview_tertiary</item>
        <item name="colorOnTertiary">@color/fusionsPreview_onTertiary</item>
        <item name="colorTertiaryContainer">@color/fusionsPreview_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/fusionsPreview_onTertiaryContainer</item>
        <item name="android:colorBackground">@color/fusionsPreview_background</item>
        <item name="colorOnBackground">@color/fusionsPreview_onBackground</item>
        <item name="colorSurface">@color/fusionsPreview_surface</item>
        <item name="colorOnSurface">@color/fusionsPreview_onSurface</item>
        <item name="colorSurfaceVariant">@color/fusionsPreview_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/fusionsPreview_onSurfaceVariant</item>
        <item name="colorOutline">@color/fusionsPreview_outline</item>
        <item name="colorOnSurfaceInverse">@color/fusionsPreview_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/fusionsPreview_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/fusionsPreview_primaryInverse</item>

        <item name="colorError">@color/fusionsPreview_colorError</item>
        <item name="colorOnError">@color/fusionsPreview_colorOnError</item>
        <item name="colorErrorContainer">@color/fusionsPreview_colorErrorContainer</item>
        <item name="colorOnErrorContainer">@color/fusionsPreview_colorOnErrorContainer</item>

        <!-- Ripples -->
        <item name="colorControlHighlight">?attr/colorSurfaceVariant</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.FusionsPreview" parent="Theme.FusionsPreview.Base" />

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="Theme.FusionsPreview.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_fusionspreview_splash</item>
        <item name="windowSplashScreenBackground">@color/splash</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="postSplashScreenTheme">@style/Theme.FusionsPreview</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>
</resources>
